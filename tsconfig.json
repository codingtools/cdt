{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "sourceMap": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck"   : true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules/**/*"]
}
